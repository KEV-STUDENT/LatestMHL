<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:pickers="clr-namespace:MHLControls.Pickers"
                    xmlns:local="clr-namespace:MHLControls"
                    xmlns:buttons="clr-namespace:MHLControls.MHLButtons"
                    xmlns:customButtons="clr-namespace:MHLCustomControls.Buttons;assembly=MHLCustomControls">

    <Style TargetType="{x:Type pickers:CustomPicker}" >
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type pickers:CustomPicker}">
                    <DockPanel LastChildFill="True" VerticalAlignment="Top">
                        <customButtons:MHLCustomButton DockPanel.Dock="Right" Content="..." Margin="0" Width="24"/>
                        <local:MHLTextBox DockPanel.Dock="Left" Margin="5,0,5,0"/>
                    </DockPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>