<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"        
        xmlns:MHLSourceScannerLib="clr-namespace:MHLSourceScannerLib;assembly=MHLSourceScannerLib" x:Class="MHLSourceScanner.MainWindow"
        xmlns:MHLCommon.Scanner="clr-namespace:MHLCommon.MHLScanner;assembly=MHLCommon"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition/>
            <RowDefinition Height="{Binding ElementName=SourceTree, Path=AnnotationSectionHeigh}"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <MHLSourceScannerLib:SourcePicker x:Name="SourceDirectoryPicker" Grid.Row="0" Grid.Column="0" Margin="0,5,0,0"/>
        <MHLSourceScannerLib:SourceTree x:Name="SourceTree" Grid.Row="1" Grid.Column="1" Margin="5,0,5,5" />
        <DockPanel x:Name="CoverSection" Grid.Row="2" Grid.Column="0" Margin="5,5,5,5">
            <Image Source="{Binding ElementName=SourceTree, Path=Cover}" Width="100"/>
            <DockPanel x:Name="AnnotationSection" >
                <MHLSourceScannerLib:MHLTextBlock x:Name="Authors" Text="{Binding ElementName=SourceTree, Path=Authors}" DockPanel.Dock="Top"
                                                  MaxHeight="20" Margin="5,0,5,5" FontWeight="Bold"/>
                <ScrollViewer Margin="5,0,5,5" DockPanel.Dock="Bottom">
                    <MHLSourceScannerLib:MHLTextBlock x:Name="AnnotationText" Text="{Binding ElementName=SourceTree, Path=Annotation}" />
                </ScrollViewer>
            </DockPanel>
        </DockPanel>
    </Grid>
</Window>
