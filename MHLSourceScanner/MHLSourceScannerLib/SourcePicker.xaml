<UserControl x:Class="MHLSourceScannerLib.SourcePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MHLCommon;assembly=MHLCommon"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="40"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button Content=". . ." Margin="0,5,0,0" Grid.Column="2" Height="30" VerticalAlignment="Top" HorizontalAlignment="Center" Width="30" Click="Button_Click" />
        <Label Content="Select Item" Margin="0,0,5,0" VerticalAlignment="Center" FontFamily="Arial" FontSize="16" HorizontalAlignment="Right" Width="90"/>
        <TextBox Grid.Column="1" TextWrapping="Wrap" Text="{Binding Path=Value}"
                 VerticalAlignment="Stretch" FontFamily="Arial" FontSize="16" HorizontalAlignment="Stretch" Margin="0,5,0,5" IsReadOnly="True" TextAlignment="Left" VerticalContentAlignment="Center"/>
    </Grid>
</UserControl>
