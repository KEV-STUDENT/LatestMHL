<UserControl x:Class="MHLUIElements.BookDirTree"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ModelLib="clr-namespace:MHLSourceScannerModelLib;assembly=MHLSourceScannerModelLib"
             xmlns:local="clr-namespace:MHLUIElements"
             xmlns:MHLControls="clr-namespace:MHLControls;assembly=MHLControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" x:Name="DirTree">
    <Grid>
        <TreeView x:Name="ShowDir" Margin="0">
            <TreeView.Resources>
                <ResourceDictionary>
                    <HierarchicalDataTemplate DataType = "{x:Type ModelLib:TreeItem}" ItemsSource="{Binding Path=SourceItems}">
                        <MHLControls:MHLTextBlock Text="{Binding Name}"/>
                    </HierarchicalDataTemplate>
                </ResourceDictionary>
            </TreeView.Resources>
        </TreeView>
    </Grid>
</UserControl>
